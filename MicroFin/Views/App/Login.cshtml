
@model MicroFin.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
    <div class="login">
        <div class="heading">
            <h2>ATHIRSHTAM MICRO FINANCE PRIVATE LTD</h2>
            @using (Html.BeginForm("Home", "App", FormMethod.Post))
            {

                <div class="input-group input-group-lg">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    @Html.TextBox("UserId", Model, new { @class = "form-control" })
                </div>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    @Html.Password("Passwd", Model, new { @class = "form-control" })
                </div>
                <span> <span style="color:red"> @ViewBag.ErrMsg</span><br /> </span>
                <button type="submit" class="float">Login</button>
            }
        </div>
    </div>
</body>
</html>
